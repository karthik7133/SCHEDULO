<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg11"
    android:fitsSystemWindows="true"
    tools:context=".fullview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon2"
            android:id="@+id/icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCHEDULO"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/icon"
            android:fontFamily="monospace"
            android:id="@+id/schedulo"/>


    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg11"
        tools:context=".gpacalc">

        <!-- RecyclerView Directly Inside CoordinatorLayout -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Fullview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"/>

        <!-- Floating Action Button Placed Directly in CoordinatorLayout -->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</LinearLayout>