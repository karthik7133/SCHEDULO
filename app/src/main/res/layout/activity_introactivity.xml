<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg11"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".intoactivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="280sp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Schedulo"
            android:textSize="29sp"
            android:textColor="#FFFDD0"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/one"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="24sp"
            android:textColor="#FFFDD0"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/two"
            android:layout_marginBottom="24dp" />



        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnbg3"
            app:backgroundTint="@null"
            android:layout_centerHorizontal="true"

            android:textColor="#FFFDD0"
            android:text="Get Started"
            android:layout_marginTop="24dp" />

    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Ch Karthik"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/Ch_karthik"
            android:textColor="#0B47B1"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Ch_karthik"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mail"
                android:id="@+id/mail"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/instagram"
                android:id="@+id/insta"
                android:layout_below="@+id/Ch_karthik"
                android:layout_centerInParent="true"
                />

        </LinearLayout>



    </RelativeLayout>













</LinearLayout>