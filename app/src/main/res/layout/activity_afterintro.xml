<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg11"
    android:fitsSystemWindows="true"
    tools:context=".Afterintro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon2"
            android:id="@+id/icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCHEDULO"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/icon"
            android:fontFamily="monospace"
            android:id="@+id/schedulo"/>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="2sp"
        android:elevation="20sp"
        app:cardCornerRadius="15sp"
        android:padding="20sp"
        android:background="@drawable/cardviewbg1"
        android:id="@+id/Scheduler">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actions "
                android:layout_margin="10sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/Actions"
                android:textColor="@color/purpleGradient"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheduler"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv1"
                        android:textSize="25dp"
                        android:layout_marginLeft="5sp"
                        android:layout_margin="10sp"
                        android:textStyle="bold"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:layout_margin="10sp"
                        android:id="@+id/Schulercard"
                        android:backgroundTint="@color/neon_violate"
                        android:background="@color/white">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image7"
                                android:src="@drawable/cardimage1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image7"
                                android:text="Schedule \nyour \nNotifications"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="25sp"
                                android:textColor="#EDDFBB"/>





                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marks"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:id="@+id/tv2"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:id="@+id/markscard"
                        android:layout_margin="10sp"
                        android:backgroundTint="@color/neon_violate">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image78"
                                android:src="@drawable/cardview2image"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image78"
                                android:text="Save your Acadamic Data"
                                android:textColor="#EDDFBB"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="30sp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CGPA"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:id="@+id/tv3"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:id="@+id/cgpacard"
                        android:layout_margin="10sp"
                        android:backgroundTint="@color/neon_violate">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image87"
                                android:src="@drawable/academic"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image87"
                                android:text="Calculate your CGPA"
                                android:textColor="#EDDFBB"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="30sp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPA"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:id="@+id/tv4"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:id="@+id/gpacard"
                        android:layout_margin="10sp"
                        android:backgroundTint="@color/neon_violate">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image897"
                                android:src="@drawable/image87"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image897"
                                android:text="Calculate your GPA"
                                android:textColor="#EDDFBB"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="30sp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User-Data"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:id="@+id/tv5"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:id="@+id/userdatacard"
                        android:layout_margin="10sp"
                        android:backgroundTint="@color/neon_violate">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image898"
                                android:src="@drawable/people"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image898"
                                android:text="User Details"
                                android:textAlignment="center"
                                android:textColor="#EDDFBB"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="30sp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PYQ'S"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:id="@+id/tv6"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:id="@+id/PYQDATACARD"
                        android:layout_margin="10sp"
                        android:backgroundTint="@color/neon_violate">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image868"
                                android:src="@drawable/paper"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image868"
                                android:text="PYQ \nPapers"
                                android:textAlignment="center"
                                android:textColor="#EDDFBB"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="30sp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time table"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:id="@+id/tv7"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:elevation="20sp"
                        app:cardCornerRadius="15sp"
                        android:id="@+id/timetabledatacard"
                        android:layout_margin="10sp"
                        android:backgroundTint="@color/neon_violate">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150sp"
                                android:layout_height="130sp"
                                android:layout_margin="20sp"
                                android:id="@+id/image828"
                                android:src="@drawable/timetable"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image828"
                                android:text="Save your \nTime Table"
                                android:textAlignment="center"
                                android:textColor="#EDDFBB"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:textSize="30sp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>





            </ScrollView>






        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>